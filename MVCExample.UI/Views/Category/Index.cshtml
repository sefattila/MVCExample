@using MVCExample.UI.Models.VMs.CategoryVMs;


@model IEnumerable<CategoryVM>

<div class="container col-lg-10">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Adı</th>
                <th>Açıklama</th>
                @if (User.Identity.IsAuthenticated)
                {
                    <th>Güncelle</th>
                    <th>Sil</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (CategoryVM item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.CategoryName</th>
                    <th>@item.Description</th>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <th><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></th>
                        <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></th>
                    }
                </tr>
            }
        </tbody>
    </table>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-outline-success">Kullanıcı Ekle</a>
    }
</div>